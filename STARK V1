-- Chat function
local function sendChat(message)
    local chatEvent = ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents")
    if chatEvent then
        local sayMessage = chatEvent:FindFirstChild("SayMessageRequest")
        if sayMessage then
            sayMessage:FireServer(message, "All")
            return
        end
    end

    local TextChatService = game:GetService("TextChatService")
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        local textChannels = TextChatService:FindFirstChild("TextChannels")
        if textChannels then
            local general = textChannels:FindFirstChild("RBXGeneral")
            if general then
                general:SendAsync(message)
                return
            end
        end
    end

    pcall(function()
        StarterGui:SetCore("ChatMakeSystemMessage", {Text = message})
    end)
end

-- Signature
local signature = "\_\_\_\_\_\_\_\_\_\_\_\_\_\_\_\_-\_\_\\_\_-\_\_\_\_\\_\_\_\_-\_\_\_\_--\_\_--\___--\_-_"

-- Tags list
local tags = {"TMKX ME HELICOPTERðŸ˜­", "TMKX ME BAMBOOðŸ˜‚", "TMKX ME TRAINðŸ˜­", "TMKX 6KKIðŸ¤£ ", "TMKX ME ZOOðŸ˜–", "TMKX ME ANIMALSðŸ˜Ž", "TMKX ME 7LODEðŸ˜­", "SCRIPT BY STARK ABBUðŸ‘‘"}

-- Spamming control
local isSpamming = false
local spamTask = nil

-- Toggle button
toggleBtn.MouseButton1Click:Connect(function()
    local input = textBox.Text
    local haterName = input:match("^%s*(.-)%s*$"):lower()  -- lowercase for case-insensitive check

    -- Owner protection checks
    local containsST4RK = haterName:find("ST4RK")
    local containsShorya = haterName:find("shorya")

    if containsST4RK and containsShorya then
        status.Text = "you cant put name of owner and his friend's name"
        status.TextColor3 = Color3.fromRGB(255, 50, 50)
        return
    elseif containsST4RK then
        status.Text = "u cant put owner's name"
        status.TextColor3 = Color3.fromRGB(255, 50, 50)
        return
    elseif containsShorya then
        status.Text = "u cant put owner's friend's name"
        status.TextColor3 = Color3.fromRGB(255, 50, 50)
        return
    elseif haterName == "" then
        status.Text = "Enter a name!"
        status.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    -- If passed checks, toggle spam
    isSpamming = not isSpamming

    if isSpamming then
        toggleBtn.Text = "STOP"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
        status.Text = "Spamming: " .. input
        status.TextColor3 = Color3.fromRGB(0, 255, 0)

        spamTask = task.spawn(function()
            while isSpamming do
                for _, tag in ipairs(tags) do
                    if not isSpamming then break end
                    sendChat(signature .. " " .. input .. " (" .. tag .. ")")
                    task.wait(1.2)
                end
                if isSpamming then
                    sendChat(signature .. " SCRIPT BY ST4RK ABBU")
                end
                task.wait(2)
            end
        end)
    else
        toggleBtn.Text = "ON"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
        status.Text = "Spam stopped"
        status.TextColor3 = Color3.fromRGB(255, 100, 100)
        if spamTask then
            task.cancel(spamTask)
            spamTask = nil
        end
    end
end)

-- Close button
closeBtn.MouseButton1Click:Connect(function()
    isSpamming = false
    if spamTask then task.cancel(spamTask) end
    screenGui:Destroy()
end)

-- Minimize
local minimized = false

local function minimizeGUI()
    if minimized then return end
    minimized = true
    minimizedBtn.Visible = true
    TweenService:Create(frame, TweenInfo.new(0.3), {Size = UDim2.new(0, 0, 0, 0)}):Play()
    task.wait(0.3)
    frame.Visible = false
end

local function restoreGUI()
    if not minimized then return end
    minimized = false
    frame.Visible = true
    minimizedBtn.Visible = false
    TweenService:Create(frame, TweenInfo.new(0.3), {Size = UDim2.new(0, 300, 0, 140)}):Play()
end

minimizeBtn.MouseButton1Click:Connect(minimizeGUI)
minimizedBtn.MouseButton1Click:Connect(restoreGUI)
